//
// MAIN STYLES
// ===========
// Here is base styles of site
//

//
// COMMON VARS
// Common variables goes below
//

base-font-size       = 150%
base-font-family     = Georgia, Cambria, 'Times New Roman', Times, serif
base-text-color      = #444
base-lines-color     = #eee

selection-bg-color   = #edff7e
selection-text-color = #111

h1-font-size = 2.074rem
h2-font-size = 1.728rem
h3-font-size = 1.44em;
h4-font-size = 1.2rem;

small-font-size = 0.75rem

//
// STYLES
// Common styles
//

html
  height 100%
  max-height 100%
  font-size base-font-size

body
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  text-rendering optimizeLegibility

  font-family base-font-family
  line-height 1.6em
  color base-text-color

::selection
  color selection-text-color
  background selection-bg-color
  text-shadow none

h1, h2, h3, h4
  margin 1.414em 0 0.5em
  font-weight bold
  line-height 1.2

h1
  text-align center
  margin-top 0
  font-size h1-font-size * 1.5

h2
  font-size h2-font-size

h3
  font-size h3-font-size

h4
  font-size h4-font-size

small
  font-size small-font-size

a
  color inherit
  text-decoration none
  border-bottom 1px dashed base-text-color
  &:hover
    border-bottom-style solid

.main-content
  display block
  max-width 30em
  margin 5em auto
  color base-text-color
  @media (max-device-width: 480px)
    font-size .8rem
    @media (orientation: landscape)
      font-size .6rem

  code
    font-size .9rem
    padding .2rem .5rem
    background base-lines-color
    border-radius 3px

  pre
    background base-lines-color
    padding 1em
    overflow-y auto
    border-radius 3px

  img
    display block
    max-width 100%
    margin 0 auto
    border-radius 3px

  blockquote
    margin 0
    padding-left 1rem
    border-left 3px solid base-lines-color
    p a:last-of-type
      // Last link is a source
      font-style italic
      font-size 0.8rem
      &::before
        content 'â€” '

.site-footer
  display block
  max-width 30em
  font-size .6rem
  line-height 1.6
  margin 3rem auto 5rem
  text-align center
  a
    border-bottom none
